<h1>Listing novels</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Written By</th>
    <th>Edited By</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @novels.each do |novel| %>
  <tr>
    <td><%= novel.title %></td>
    <td><%= novel.description %></td>
    <td><%= novel.writer.try(:email) || '-' %></td>
    <td><%= novel.editor.try(:email) || '-' %></td>
    <td><%= link_to 'Show', novel %></td>
    <td><%= link_to 'Edit', edit_novel_path(novel) %></td>
    <td><%= link_to 'Destroy', novel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

